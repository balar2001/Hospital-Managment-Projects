  <style>
  .form-control:focus{
    border-color: #5ecccf;
    /* box-shadow: 0 0 0 .25rem rgba(101, 124, 96, 0.25); */
    box-shadow: 0 0 0 .25rem rgb(94, 204, 207, 0.25);
  }

  .btn:hover{
    background-color: rgb(94, 204, 207, 0.25);
    border-color: #5ecccf;
  }

  .form-check-input:focus {
    border-color: #5ecccf;
    outline: 0;
    box-shadow: 0 0 0 .25rem rgb(94, 204, 207, 0.25);
    }

    .form-check-input:checked {
    background-color: #5ecccf;
    border-color: #5ecccf;
    }
  </style>
  
  <body class="login-bg d-flex align-items-center justify-content-center min-vh-100">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-12">
          <div class="row align-items-center justify-content-center">
            <div class="col-xl-8 col-sm-4 col-12">
              <form action="login" class="my-5 form" method="post">
                <div class="bg-white p-5 rounded-4 shadow">
                  <div class="login-form text-center">
                    <a href="index.html" class="mb-3 d-flex justify-content-center p-3" style="background-color: #5ecccf; border-radius: 1rem;">
                      <img src="assets/images/logo.svg" class="img-fluid login-logo" alt="Admin Dashboard" />
                    </a>
                    <h2 class="mt-4 mb-4">Login</h2>
                    <div class="d-flex align-items-center justify-content-between mb-3">
                      <a class="text-primary" style="color: #000000 !important;">User Type?</a>
                      <div class="form-check m-0">
                          <input class="form-check-input" type="radio" name="userType" value="admin" id="userAdmin" name="boxAdmin"/>
                          <label class="form-check-label" for="userAdmin">Admin</label>
                      </div>
                      <div class="form-check m-0">
                          <input class="form-check-input" type="radio" name="userType" value="doctor" id="userDoctor" name="boxDoc"/>
                          <label class="form-check-label" for="userDoctor">Doctor</label>
                      </div>
                      <div class="form-check m-0">
                          <input class="form-check-input" type="radio" name="userType" value="staff" id="userStaff" name="boxStaff"/>
                          <label class="form-check-label" for="userStaff">Staff</label>
                      </div>
                  </div>
                    <div class="mb-3 text-start">
                      <label class="form-label">Email</label>
                      <input type="text" class="form-control" placeholder="Enter your email" name="panelEmail"/>
                    </div>
                    <div class="mb-3 text-start">
                      <label class="form-label">Password</label>
                      <div class="input-group">
                        <input type="password" class="form-control" placeholder="Enter password" name="panelPassword"/>
                        <a href="#" class="input-group-text">
                          <i class="icon-eye"></i>
                        </a>
                      </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                      <div class="form-check m-0">
                        <input class="form-check-input" type="checkbox" value="" id="rememberPassword" />
                        <label class="form-check-label" for="rememberPassword">Remember</label>
                      </div>
                      <a href="forgot-password.html" class="text-primary text-decoration-underline" style="color: #000000 !important;">Lost password?</a>
                    </div>
                    <div class="d-grid py-3 mt-3 gap-3">
                      <!-- <a href="index.html" class="btn btn-lg btn-outline-dark" style="color: #000000; border-color: rgb(94, 204, 207, 0.60);"> 
                        LOGIN
                      </a> -->
                      <input type="submit" value="LOGIN" class="btn btn-lg btn-outline-dark" style="color: #000000; border-color: rgb(94, 204, 207, 0.60);">
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
